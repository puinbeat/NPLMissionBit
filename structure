        <center>
            <button onclick="myFunction()">I'll give you a random number</button>
            <p id="demo"></p>
        </center>
        <script>
            var jscustom;
            function myFunction() {
                var i = Math.random();
                if (i < 0.5) {
                    jscustom = 1;
                } else {
                    jscustom = 2;
                }
                document.getElementById("demo").innerHTML = jscustom;
            }
            
        </script>
        
        
        <center>
            <button onclick="myFunction()">I'll give you a random number</button>
            <p id="demo"></p>
        </center>
        <script>
            var jscustom;
            function myFunction() {
                var i = Math.random();
                if (i < 0.33) {
                    jscustom = 1;
                } else if (i > 0.33 && i < 0.66) {
                    jscustom = 2;
                } else {
                    jscustom = 3;
                }
                document.getElementById("demo").innerHTML = jscustom;
            }
            
        </script>